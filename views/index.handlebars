<h1>Eat-Da-Burger!</h1>

<h2>Burgers to Devour</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
		        <input type="hidden" name="devoured" value="true">
		        <button type="submit">DEVOUR</button>
        </form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
		        <input type="hidden" name="devoured" value="true">
		        <button type="submit">DEVOUR</button>
        </form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Make Burger</button>
</form>